<?xml version="1.0"?>
<layout>
    <lessfriction_boilerplate>
        <update handle="page_one_column" />

        <remove name="left" />
        <remove name="right" />

        <reference name="content">
            <action method="unsetChild"><alias>checkout.onepage</alias></action>
        </reference>

        <reference name="foot">
            <action method="addItem">
                <type>skin_js</type>
                <name>kl/lessfriction/lessfriction.js</name>
            </action>
        </reference>
    </lessfriction_boilerplate>

    <lessfriction_default>
        <reference name="content">
            <block name="checkout.layout" type="core/template" template="kl/lessfriction/layout.phtml" />
        </reference>
    </lessfriction_default>
</layout>
